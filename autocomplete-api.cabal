extra-source-files: CHANGELOG.md

common common-all
    build-depends:    base ^>=4.12.0.0,
                      containers,
                      time,
                      bytestring,
                      text,
    default-language: Haskell2010

library autocomplete
    import:           common-all
    exposed-modules:  Autocomplete, LoadFile
    hs-source-dirs:   libs

library loadFile
    import:           common-all
    exposed-modules:  LoadFile
    hs-source-dirs:   libs

library logger
    import:           common-all
    exposed-modules:  Logger
    hs-source-dirs:   libs
    build-depends:    wai

library router
    import:           common-all
    exposed-modules:  Router
    build-depends:    warp ^>=3.3.17,
                      http-types,
                      wai ^>=3.2.3,
                      aeson ^>=1.5.6.0
    other-modules:    Autocomplete, Logger
    hs-source-dirs:   libs

executable autocomplete-api
    import:           common-all
    main-is:          Main.hs
    build-depends:    warp ^>=3.3.17,
                      http-types,
                      wai ^>=3.2.3,
                      aeson ^>=1.5.6.0

    -- Modules included in this executable, other than Main.
    other-modules:    Autocomplete,
                      Router,
                      Logger

    -- LANGUAGE extensions used by modules in this package.
    -- other-extensions:
    hs-source-dirs:   app, libs
